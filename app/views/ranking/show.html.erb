<h1>Rankings</h1>

<div class="twocolumn">
    <div class="rankings1">
        <h2><%= @user.username %>'s followers:</h2>

        <table class="rankings" border="1">
            <% @followers.each do |user| %>
                <tr>
                    <td><%= user.username %></td>
                    <td><%= user.score %></td>
                </tr>
            <% end %>
        </table>
    </div>

    <div class="rankings2">
        <h2><%= @user.username %>'s friends:</h2>

        <table class="rankings" border="1">
            <% @friends.each do |user| %>
                <tr>
                    <td><%= user.username %></td>
                    <td><%= user.score %></td>
                </tr>
            <% end %>
        </table>
    </div>
</div>
<br /><br />
