<h1>Login</h1>

<div class="width">
    <% if flash[:error] -%>
          <p class='error'><%=h flash[:error] %></p>
      <% end -%>
      <% if flash[:notice] -%>
          <p class='notice'><%=h flash[:notice] %></p>
    <% end -%>
</div>

<div class="forms">
    <%= form_for(:session, url: sessions_path) do |f| %>
        <p>
        <%= f.label :email %><br>
        <%= f.text_field  :email %>
        </p>
        <p>
        <%= f.label :password %><br>
        <%= f.password_field :password %>
        </p>
        <p>
        <%= f.submit "Sign In" %>
        </p>
    <% end %>

    <p>New User? <%= link_to "Sign Up", signup_path %></p>
</div>
